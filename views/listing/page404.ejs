<% layout("/layout/boilerplate") %>

<style>
   
     
    .notFoundPage{
        margin: 0;
      font-family: 'Trebuchet MS', sans-serif;
      /* background: #1a1a1a; */
      color: #f5f5f5;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      text-align: center;

    }
    .haunted-house {
      width: 200px;
      margin-bottom: 20px;
      animation: float 4s ease-in-out infinite;
    }

    @keyframes float {
      0% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
      100% { transform: translateY(0); }
    }

    h1 {
      font-size: 3em;
      color: #ff4c4c;
      margin-bottom: 0.2em;
    }

    p {
      font-size: 1.2em;
      color:gray;
      margin-bottom: 2em;
    }

    button {
      background: #ff4c4c;
      border: none;
      padding: 12px 24px;
      border-radius: 8px;
      font-size: 1em;
      color: white;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background: #e60000;
    }
  </style>

 <div class="notFoundPage">
    <!-- Haunted/Broken House SVG -->
 <svg class="haunted-house" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64">
    <rect x="18" y="28" width="28" height="24" fill="#333"/>
    <polygon points="32,10 14,28 50,28" fill="#555"/>
    <rect x="28" y="38" width="8" height="14" fill="#222"/>
    <rect x="22" y="32" width="4" height="6" fill="#999"/>
    <rect x="38" y="32" width="4" height="6" fill="#999"/>
    <line x1="32" y1="10" x2="20" y2="28" stroke="#222" stroke-width="2"/>
    <line x1="32" y1="10" x2="44" y2="28" stroke="#222" stroke-width="2"/>
    <circle cx="20" cy="50" r="2" fill="#ff4c4c"/>
    <circle cx="44" cy="50" r="2" fill="#ff4c4c"/>
  </svg>

  <h1>404 - Haunted Zone!</h1>
  <p>(It's creepy and broken. Go back while you can!)</p>
  <button onclick="window.history.back()">Go Back</button>
 </div>