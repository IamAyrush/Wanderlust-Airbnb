<body>
    <div class="container-user" style="background-color: #fe424d;">
        <%- include("../include/flash.ejs") %>

        <div id="loader" class="loading-spinner" style=" color: white;">
            <div class="spinner-grow" style="width: 3rem; height: 3rem;" role="status"> </div>
            <p>Loading...</p>
        </div> 

        <%- body %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
