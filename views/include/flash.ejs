<%   if(success && success.length){ %>
<div class="alert alert-info alert-dismissible fade show  col-md-6 col-sm-10 offset-md-3 offset-sm-0" role="alert"  >
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>

<% } %>

<%   if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show  col-md-6 col-sm-10 offset-md-3 offset-sm-0 " role="alert"  >
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    
    <% } %>